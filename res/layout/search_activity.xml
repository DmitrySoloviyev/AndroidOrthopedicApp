<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/activity_bg" >

        <EditText
            android:id="@+id/search_order_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="5dp"
            android:ems="10"
            android:hint="№ заказа"
            android:lines="1"
            android:maxLength="10"
            android:maxLines="1"
            android:textSize="20sp"
            android:textStyle="italic" >

        	<requestFocus />
    		</EditText>

        <AutoCompleteTextView
            android:id="@+id/search_model"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:hint="Модель"
            android:lines="1"
            android:maxLength="6"
            android:maxLines="1"
            android:textSize="20sp"
            android:textStyle="italic" />
	
	    <EditText
	        android:id="@+id/search_size"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_alignParentRight="true"
	        android:layout_below="@+id/new_size"
	        android:layout_marginTop="10dp"
	        android:ems="10"
	        android:hint="Размер"
	        android:maxLength="5"
	        android:maxLines="1"
	        android:textSize="20sp"
	        android:textStyle="italic" />
	
	    <EditText
	        android:id="@+id/search_urk"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_alignParentRight="true"
	        android:layout_below="@+id/new_urk"
	        android:layout_marginTop="10dp"
	        android:ems="10"
	        android:hint="УРК"
	        android:maxLength="7"
	        android:maxLines="1"
	        android:textSize="20sp"
	        android:textStyle="italic" />
	
	    <EditText
	        android:id="@+id/search_height"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_alignParentRight="true"
	        android:layout_below="@+id/new_height"
	        android:layout_marginTop="10dp"
	        android:ems="10"
	        android:hint="Высота"
	        android:maxLength="5"
	        android:maxLines="1"
	        android:textSize="20sp"
	        android:textStyle="italic" />
	
	    <EditText
	        android:id="@+id/search_TopVolume"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_alignParentRight="true"
	        android:layout_below="@+id/new_TopVolume"
	        android:layout_marginTop="10dp"
	        android:ems="10"
	        android:hint="Объем верха"
	        android:maxLength="9"
	        android:maxLines="1"
	        android:textSize="20sp"
	        android:textStyle="italic" />
	
	    <EditText
	        android:id="@+id/search_AnkleVolume"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_alignParentRight="true"
	        android:layout_below="@+id/new_AnkleVolume"
	        android:layout_marginTop="10dp"
	        android:ems="10"
	        android:hint="Объем лодыжки"
	        android:maxLength="9"
	        android:maxLines="1"
	        android:textSize="20sp"
	        android:textStyle="italic" />
	
	    <EditText
	        android:id="@+id/search_KvVolume"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_alignParentRight="true"
	        android:layout_below="@+id/new_KvVolume"
	        android:layout_marginTop="10dp"
	        android:ems="10"
	        android:hint="Объем КВ"
	        android:maxLength="9"
	        android:maxLines="1"
	        android:textSize="20sp"
	        android:textStyle="italic" />

	    <EditText
	        android:id="@+id/search_customer"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:ems="10"
	        android:hint="Заказчик"
	        android:textSize="20sp"
	        android:textStyle="italic" />
	
	    <CheckBox
	        android:id="@+id/mk"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_below="@+id/editText8"
	        android:layout_marginTop="5dp"
	        android:text="К/П"
	        android:textSize="20sp" />
	
	    <CheckBox
	        android:id="@+id/mt"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignBaseline="@+id/checkBox1"
	        android:layout_alignBottom="@+id/checkBox1"
	        android:layout_marginTop="5dp"
	        android:layout_toRightOf="@+id/checkBox1"
	        android:text="Траспира"
	        android:textSize="20sp" />
	
	    <CheckBox
	        android:id="@+id/mn"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignBaseline="@+id/checkBox2"
	        android:layout_alignBottom="@+id/checkBox2"
	        android:layout_alignParentRight="true"
	        android:layout_marginTop="5dp"
	        android:text="Мех натуральный"
	        android:textSize="20sp" />
	
	    <CheckBox
	        android:id="@+id/mw"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentBottom="true"
	        android:layout_alignParentRight="true"
	        android:layout_marginTop="5dp"
	        android:text="Мех полушерстяной"
	        android:textSize="20sp" />
	
	    <CheckBox
	        android:id="@+id/ma"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_below="@+id/checkBox1"
	        android:layout_marginTop="5dp"
	        android:text="Мех искусственный"
	        android:textSize="20sp" />
	
	    <Button
	        android:id="@+id/submit_search"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginBottom="20dp"
	        android:layout_marginLeft="10dp"
	        android:layout_marginRight="10dp"
	        android:layout_marginTop="10dp"
	        android:text="Искать!"
	        android:textSize="20sp"
	        android:textStyle="bold" />

    </LinearLayout>

</ScrollView>