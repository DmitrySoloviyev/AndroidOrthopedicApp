<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#000" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="#cccccc"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/new_order_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:hint="№ заказа"
            android:inputType="number|text"
            android:maxLength="10"
            android:maxLines="1"
            android:textSize="20sp"
            android:textStyle="italic" >

            <requestFocus />
        </EditText>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <AutoCompleteTextView
                android:id="@+id/new_model"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:completionThreshold="1"
                android:ems="10"
                android:hint="Модель"
                android:maxLength="6"
                android:maxLines="1"
                android:textSize="20sp"
                android:textStyle="italic" />

            <ImageButton
                android:id="@+id/get_model_image"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_gravity="bottom"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:src="@android:drawable/ic_menu_camera" />

        </LinearLayout>

        <EditText
            android:id="@+id/new_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:hint="Размер"
            android:inputType="number|text"
            android:maxLength="5"
            android:maxLines="1"
            android:textSize="20sp"
            android:textStyle="italic" />

        <EditText
            android:id="@+id/new_urk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:hint="УРК"
            android:inputType="number|text"
            android:maxLength="7"
            android:maxLines="1"
            android:textSize="20sp"
            android:textStyle="italic" />

        <EditText
            android:id="@+id/new_height"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:hint="Высота"
            android:inputType="number|text"
            android:maxLength="5"
            android:maxLines="1"
            android:textSize="20sp"
            android:textStyle="italic" />

        <EditText
            android:id="@+id/new_TopVolume"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:hint="Объем верха"
            android:inputType="number|text"
            android:maxLength="9"
            android:maxLines="1"
            android:textSize="20sp"
            android:textStyle="italic" />

        <EditText
            android:id="@+id/new_AnkleVolume"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:hint="Объем лодыжки"
            android:inputType="number|text"
            android:maxLength="9"
            android:maxLines="1"
            android:textSize="20sp"
            android:textStyle="italic" />

        <EditText
            android:id="@+id/new_KvVolume"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:hint="Объем КВ"
            android:inputType="number|text"
            android:maxLength="9"
            android:maxLines="1"
            android:textSize="20sp"
            android:textStyle="italic" />

        <EditText
            android:id="@+id/new_customerSN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:hint="Фамилия заказчика"
            android:maxLines="1"
            android:textSize="20sp"
            android:textStyle="italic" />

        <EditText
            android:id="@+id/new_customerFN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:hint="Имя заказчика"
            android:maxLines="1"
            android:textSize="20sp"
            android:textStyle="italic" />

        <EditText
            android:id="@+id/new_customerP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:hint="Отчество заказчика"
            android:maxLines="1"
            android:textSize="20sp"
            android:textStyle="italic" />

        <Spinner
            android:id="@+id/new_employee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp" />

        <Spinner
            android:id="@+id/new_materials"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp" />

        <Button
            android:id="@+id/submit_new_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="30dp"
            android:drawableLeft="@android:drawable/ic_menu_edit"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:shadowColor="#fff"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="1"
            android:text="Записать!"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

</ScrollView>