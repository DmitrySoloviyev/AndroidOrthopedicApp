<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.orthopedicdb"
    android:installLocation="auto"
    android:versionCode="1"
    android:versionName="0.0.7" >

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/shoes"
        android:label="@string/app_name" android:hardwareAccelerated="true" android:theme="@style/AppTheme">
        <activity
            android:name="com.example.orthopedicdb.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.orthopedicdb.SearchActivity"
            android:label="@string/app_section_search"
            android:theme="@style/AppTheme" >
        </activity>
        <activity
            android:name="com.example.orthopedicdb.NewOrderActivity"
            android:label="@string/app_section_new_order"
            android:theme="@style/AppTheme" >
        </activity>
        <activity
            android:name="com.example.orthopedicdb.AllOrdersActivityShort"
            android:label="@string/app_section_all_orders"
            android:theme="@style/AppTheme" >
        </activity>
        <activity
            android:name="com.example.orthopedicdb.NewEmployee"
            android:label="Новый модельер"
            android:theme="@android:style/Theme.Holo.Light.Dialog" >
        </activity>
        <activity
            android:name="com.example.orthopedicdb.NewMaterial"
            android:label="Новый материал"
            android:theme="@android:style/Theme.Holo.Light.Dialog" >
        </activity>
        <activity android:name="com.example.orthopedicdb.DetailOrderActivity" android:theme="@style/AppTheme"></activity>
        <activity android:name="EditOrderActivity" android:label="Редактирование" android:theme="@style/AppTheme"></activity>
        <activity android:label="Что нового" android:name="NewsActivity" android:theme="@android:style/Theme.Holo.Light.Dialog"></activity>
    </application>

</manifest>